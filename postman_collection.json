{
  "info": {
    "name": "MiniApp API Collection",
    "description": "API collection cho hệ thống tích điểm đa app",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "app_id",
      "value": "1"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"0901234567\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"0987654321\",\n  \"password\": \"newuser123\",\n  \"name\": \"New User\",\n  \"app_id\": \"{{app_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/me",
              "host": ["{{base_url}}"],
              "path": ["me"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"birthday\": \"1990-01-01\",\n  \"gender\": \"male\",\n  \"address\": \"123 Main St\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/me",
              "host": ["{{base_url}}"],
              "path": ["me"]
            }
          }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/categories?active=1",
              "host": ["{{base_url}}"],
              "path": ["categories"],
              "query": [
                {
                  "key": "active",
                  "value": "1"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Vouchers",
      "item": [
        {
          "name": "Get Vouchers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/vouchers?category_id=1&keyword=coffee&points_lt=200&sort=latest",
              "host": ["{{base_url}}"],
              "path": ["vouchers"],
              "query": [
                {
                  "key": "category_id",
                  "value": "1"
                },
                {
                  "key": "keyword",
                  "value": "coffee"
                },
                {
                  "key": "points_lt",
                  "value": "200"
                },
                {
                  "key": "sort",
                  "value": "latest"
                }
              ]
            }
          }
        },
        {
          "name": "Get Latest Vouchers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/vouchers/latest",
              "host": ["{{base_url}}"],
              "path": ["vouchers", "latest"]
            }
          }
        },
        {
          "name": "Redeem Voucher",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/vouchers/1/redeem",
              "host": ["{{base_url}}"],
              "path": ["vouchers", "1", "redeem"]
            }
          }
        },
        {
          "name": "Use Voucher",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/wallet/ABC12345/use",
              "host": ["{{base_url}}"],
              "path": ["wallet", "ABC12345", "use"]
            }
          }
        },
        {
          "name": "Get Wallet",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/wallet",
              "host": ["{{base_url}}"],
              "path": ["wallet"]
            }
          }
        },
        {
          "name": "Get History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history",
              "host": ["{{base_url}}"],
              "path": ["history"]
            }
          }
        }
      ]
    },
    {
      "name": "Policies",
      "item": [
        {
          "name": "Get Membership Policy",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/policies/membership",
              "host": ["{{base_url}}"],
              "path": ["policies", "membership"]
            }
          }
        },
        {
          "name": "Get Privacy Policy",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-App-Id",
                "value": "{{app_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/policies/privacy",
              "host": ["{{base_url}}"],
              "path": ["policies", "privacy"]
            }
          }
        }
      ]
    }
  ]
}
